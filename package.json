{
  "name": "sosgame",
  "version": "0.1.4",
  "author": "Alex Sav",
  "description": "Sos game",
  "private": true,
  "main": "index.js",
  "type": "module",
  "sideEffects": false,
  "scripts": {
    "ws": "node devtools/ws-server.js",
    "start": "webpack serve --config webpack_configs/webpack.config.js --mode development",
    "all": "npm-run-all -p -r ws start",
    "android": "webpack --config webpack_configs/android.webpack.config.js --mode production",
    "build": "webpack --config webpack_configs/production.webpack.config.js --mode production",
    "style": "npx eslint . -c linters/eslint.config.js",
    "style:fix": "npx eslint . -c linters/eslint.config.js --fix",
    "style2": "npx stylelint --config linters/.stylelintrc.json \"src/**/*.css\"",
    "style2:fix": "npx stylelint --config linters/.stylelintrc.json \"src/**/*.css\" --fix",
    "style3": "npx oxlint -D all -A no-console -A max-params -A prefer-add-event-listener -A no-useless-undefined -A no-undefined -A no-async-await -A func-names -A default-case -A filename-case -A no-lonely-if -A sort-keys -A no-magic-numbers -A no-plusplus --threads=1 --deny-warnings  --ignore-pattern=src/js/lib/* ./src",
    "test": "node --test --test-reporter dot",
    "test:verbose": "node --test",
    "test:coverage": "npx c8 node --test --test-reporter dot",
    "updates": "npx ncu",
    "updates:fix": "npx ncu -u && npm install"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin-js": "^4.0.0",
    "c8": "^10.1.3",
    "copy-webpack-plugin": "^12.0.2",
    "css-loader": "^7.1.2",
    "css-minimizer-webpack-plugin": "^7.0.0",
    "eslint": "^9.20.1",
    "globals": "^15.15.0",
    "html-inline-css-webpack-plugin": "^1.11.2",
    "html-webpack-plugin": "^5.6.3",
    "jsdom": "^26.0.0",
    "mini-css-extract-plugin": "^2.9.2",
    "npm-check-updates": "^17.1.14",
    "npm-run-all": "^4.1.5",
    "oxlint": "^0.15.11",
    "stylelint": "^16.14.1",
    "stylelint-config-standard": "^37.0.0",
    "terser-webpack-plugin": "^5.3.11",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.0",
    "workbox-webpack-plugin": "^7.3.0",
    "ws": "8.18.0"
  }
}
